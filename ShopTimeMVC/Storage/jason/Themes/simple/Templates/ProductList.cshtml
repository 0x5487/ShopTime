@model JasonSoft.ShopTimeMVC.Models.ProductDetailViewModel


@{
    ViewBag.Title = "Product";
}



<div class="row">
    <div class="col-lg-2">
        @Html.Partial("CategoryListLeft")
    </div>
    <div class="col-lg-10">

        @Html.Partial("Breadcrumbs")




        <div class="row">
            @using (Html.BeginForm("add", "cart"))
            {
                <fieldset>
                    <legend>Hot Shirt</legend>
                    @Html.Hidden("productId", @Model.ProductId)

                    <div class="row">
                        <div class="col-lg-6">
                            <img src="/contents/images/pd_image_feature.jpg"></img>

                        </div>
                        <div class="col-lg-6">
                            <div class="row">
                                <div class="col-lg-8">
                                    <h4>handmade shirt</h4>
                                </div>
                                <div class="col-lg-4">
                                    <h1 class="text-danger"><strong>US 4.99</strong></h1>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <p>Color: <select>
                                            <option>Please select</option>
                                            <option>White</option>
                                            <option>Black</option>
                                     <option>Yellow</option>
                                            <option>Red</option>
                                       </select></p>
                                                                <p>Size: <select>
                                            <option>S</option>
                                            <option>M</option>
                                     <option>L</option>
                                            <option>XL</option>
                                       </select></p>
                                 <p>Quantity: <select>
                                            <option>1</option>
                                            <option>2</option>
                                     <option>3</option>
                                            <option>4</option>
                                     <option>5</option>
                                       </select></p>
                            </div>
                            <hr />
                            <div class="row">
                                <p class="text-right">
  <button type="button" class="btn btn-success btn-lg">Add To Cart</button>
</p>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-lg-12">
                            detail

                        </div>

                    </div>







                    <div>
                        <span class="display-label">
                            @Html.DisplayNameFor(model => model.DisplayName):
                        </span>
                        <span class="display-field">
                            @Html.DisplayFor(model => model.DisplayName)
                        </span>
                    </div>

                    <div>
                        <span class="display-label">
                            @Html.DisplayNameFor(model => model.Description):
                        </span>
                        <span class="display-field">
                            @Html.DisplayFor(model => model.Description)
                        </span>
                    </div>

                    <div>
                        <span class="display-label">
                            @Html.DisplayNameFor(model => model.Price):
                        </span>
                        <span class="display-field">
                            @Html.DisplayFor(model => model.Price)
                        </span>
                    </div>
                    <div>
                        @Html.TextBox("qty", "1")
                        <input type="submit" value="Buy Now" />
                    </div>
                </fieldset>
            }

        </div>
    </div>
</div>





























