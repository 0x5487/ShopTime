@{
    ViewBag.Title = "Create Product";
}

<div class="panel panel-default">
    <div class="panel-heading breadcrumb">
        <li><a href="#">Product</a></li>
        <li class="active">Create Product</li>



    </div>
    <div class="panel-body">
        <form role="form">
            <fieldset>
                <legend>Create Product</legend>


                <div class="row">
                    <div class="col-lg-2">
                        <h4>Product Detail</h4>
                        <p>Enter your product's detail</p>

                    </div>
                    <div class="col-lg-10">

                        <div class="form-group">
                            <label for="exampleInputEmail1">Name*</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="eg. BMW 528 Couple">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Description</label>
                            <textarea class="form-control" rows="10" id="exampleInputPassword1"></textarea>
                        </div>


                        <div class="row form-group">
                            <div class="col-md-6">
                                <label for="exampleInputPassword1">Tags</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="eg. BMW 528 Couple">
                            </div>
                            <div class="col-md-6">
                                <label for="exampleInputPassword1">Vender</label><br />
                                <select>
                                    <optgroup label="select a vendor">
                                        <option>Microsoft</option>
                                        <option>Google</option>
                                        <option>Apple</option>
                                    </optgroup>
                                    <optgroup label="----------">
                                        <option>Create a new vendor</option>
                                    </optgroup>
                                </select>
                                <input type="text" class="form-control" id="" placeholder="new vendor's name">
                            </div>
                        </div>


                    </div>
                </div>

                <hr />


                <div class="row">
                    <div class="col-lg-2">
                        <h4>Pricing & Invertory</h4>
                        <p>Enter your product's price</p>

                    </div>
                    <div class="col-lg-10">




                        <div class="row form-group">
                            <div class="col-md-6">
                                <label for="exampleInputPassword1">Price</label>
                                <input type="text" class="form-control" id="exampleInputEmail1">
                            </div>
                            <div class="col-md-6">
                                <label for="exampleInputPassword1">Compare at price</label>
                                <input type="text" class="form-control" id="exampleInputEmail1">
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-6">
                                <label for="exampleInputPassword1">SKU (Stock Keeping Unit)</label>
                                <input type="text" class="form-control" id="exampleInputEmail1">
                            </div>
                            <div class="col-md-6">
                                <label for="exampleInputPassword1">Weight</label>
                                <input type="text" class="form-control" id="exampleInputEmail1">
                            </div>
                        </div>


                        <div class="row form-group">
                            <div class="col-md-6">
                                <div>
                                    <label for="exampleInputPassword1">Inventory policy</label><br />
                                    <select>
                                        <option>Don't track</option>
                                        <option>track</option>
                                    </select>
                                </div>
                                <div>
                                    <label for="exampleInputPassword1">Quantity</label><br />
                                    <input type="text" size="10" class="form-control" id="exampleInputEmail2">
                                </div>
                            </div>
                        </div>

                        <hr />
                        <div class="checkbox">
                            <label>
                                <input type="checkbox">
                                Is Tax inclusive?
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox">
                                Is shipping address required?
                            </label>
                        </div>

                    </div>
                </div>
                <hr />



                <div class="row">
                    <div class="col-lg-2">
                        <h4>Images</h4>
                        <p>Enter your product's price</p>
                        <button class="btn btn-default">Upload your images</button>
                    </div>
                    <div class="col-lg-10">




                        <div class="row form-group">
                            <div class="col-lg-12">
                            </div>
                        </div>

                    </div>
                </div>
                <hr />


                <div class="row">
                    <div class="col-lg-2">
                        <h4>Collections</h4>
                        <p>Select all collections that this product belongs to.</p>
                        <a href="javascript:;" id="btnAddCollections" class="btn btn-default" data-container="body" data-toggle="popover" data-placement="bottom" data-html="true" data-content='<div><input type="text"/></div>' data-original-title="" title="da">Add Collections</a>
                    </div>
                    <div class="col-lg-10">




                        <div class="row form-group">
                            <div class="col-lg-12">
                            </div>
                        </div>

                    </div>
                </div>
                <hr />


                <div class="row">
                    <div class="col-lg-2">
                        <h4>SEO</h4>
                        <p>Control how this collection shows up to search engines.</p>

                    </div>
                    <div class="col-lg-10">




                        <div class="form-group">
                            <label for="exampleInputEmail1">Title</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="seo-description">Description</label>
                            <textarea class="form-control" rows="3" id="seo-description"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="seo-description">Url</label>




                            <div class="input-group">
                                <span class="input-group-addon">http://www.jasonstore.com/products/</span>
                                <input type="text" class="form-control">
                            </div>

                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-2">
                        <h4>Optional</h4>
                        <p>Please set  your option</p>

                    </div>
                    <div class="col-lg-10">




                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox">
                                    Is product purchasable?
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox">
                                    Display this product?
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-12 text-right">
                        <button type="submit" class="btn btn-default">Cancel</button>
                        <button type="submit" class="btn btn-default btn-primary">Create</button>
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
</div>

@section inlineScript{


    $("#btnAddCollections").popover();

}