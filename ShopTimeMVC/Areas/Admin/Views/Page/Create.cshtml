@{
    ViewBag.Title = "Create Product";
}

<div class="panel panel-default">
    <div class="panel-heading breadcrumb">
        <li><a href="#">Product</a></li>
        <li class="active">Create Product</li>



    </div>
    <div class="panel-body">
        <form role="form">
            <fieldset>
                <legend>Create Page</legend>


                <div class="row">
                    <div class="col-lg-2">
                        <h4>Page Detail</h4>
                        <p>Create your page detail</p>

                    </div>
                    <div class="col-lg-10">

                        <div class="form-group">
                            <label for="exampleInputEmail1">Name*</label>
                            <input type="text" class="form-control" id="exampleInputEmail1">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Conetnt</label>
                            <textarea class="form-control" rows="40" id="exampleInputPassword1"></textarea>
                        </div>
                          <div class="form-group">
 <label for="exampleInputPassword1">Layout</label><br />
                                <select>
                                    <optgroup label="select a vendor">
                                        <option>Microsoft</option>
                                        <option>Google</option>
                                        <option>Apple</option>
                                    </optgroup>
                                    <optgroup label="----------">
                                        <option>Create a new vendor</option>
                                    </optgroup>
                                </select>
                        </div>




                    </div>
                </div>


                <hr />


                <div class="row">
                    <div class="col-lg-2">
                        <h4>SEO</h4>
                        <p>Control how this collection shows up to search engines.</p>

                    </div>
                    <div class="col-lg-10">




                        <div class="form-group">
                            <label for="exampleInputEmail1">Title</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="seo-description">Description</label>
                            <textarea class="form-control" rows="3" id="seo-description"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="seo-description">Url</label>




                            <div class="input-group">
                                <span class="input-group-addon">http://www.jasonstore.com/pages/</span>
                                <input type="text" class="form-control">
                            </div>

                        </div>
                    </div>
                </div>
                <hr />
                

                <div class="row">
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-default">Cancel</button>
                        <button type="submit" class="btn btn-default btn-primary">Create</button>
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
</div>

@section inlineScript{


    $("#btnAddCollections").popover();

}