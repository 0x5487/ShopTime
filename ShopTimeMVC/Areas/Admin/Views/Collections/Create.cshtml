@{
    ViewBag.Title = "Create Collection";
}

<div class="panel panel-default">
    <div class="panel-heading breadcrumb">
        <li><a href="#">Collection</a></li>
        <li class="active">Create Collection</li>



    </div>
    <div class="panel-body">
        <form role="form">
            <fieldset>
                <legend>Create Collection</legend>


                <div class="row">
                    <div class="col-lg-2">
                        <h4>Collection Detail</h4>
                        <p>Write a name and description for this collection.</p>
                        <strong>Featured Image</strong><br />
                        <button class="btn btn-default">Choose Image</button>
                    </div>
                    <div class="col-lg-10">

                        <div class="form-group">
                            <label for="exampleInputEmail1">Title*</label>
                            <input type="text" class="form-control" id="exampleInputEmail1">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Description</label>
                            <textarea class="form-control" rows="6" id="exampleInputPassword1"></textarea>
                        </div>
                    </div>
                </div>

                <hr />




                <div class="row">
                    <div class="col-lg-2">
                        <h4>Products</h4>
                        <p>Manage the products that belong to this collection.</p>
                        <button class="btn btn-default">Add Products</button>
                    </div>
                    <div class="col-lg-10">
                        <div class="row form-group">
                            <div class="col-lg-12">
                            </div>
                        </div>

                    </div>
                </div>
                <hr />


                <div class="row">
                    <div class="col-lg-2">
                        <h4>SEO</h4>
                        <p>Control how this collection shows up to search engines.</p>
                    </div>
                    <div class="col-lg-10">




                        <div class="form-group">
                            <label for="exampleInputEmail1">Title</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="seo-description">Description</label>
                            <textarea class="form-control" rows="3" id="seo-description"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="seo-description">Url</label>
                            http://www.jasonstore.com/products/
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="">
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-2">
                        <h4>Optional</h4>
                        <p>Please set  your option</p>

                    </div>
                    <div class="col-lg-10">




                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox">
                                    Is product purchasable?
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox">
                                    Display this product?
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-12 text-right">
                        <button type="submit" class="btn btn-default">Cancel</button>
                        <button type="submit" class="btn btn-default btn-primary">Create</button>
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
</div>

