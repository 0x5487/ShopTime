@{
    ViewBag.Title = "Collection";
}

<div class="panel panel-default">
    <div class="panel-heading">
        Product
        

    </div>
    <div class="panel-body">
        <div class="row">

            <div class="col-lg-8">
                <form class="form-inline" role="form">
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" class="form-control">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">Search</button>
                            </span>
                        </div>
                    </div>
                </form>
            </div>


            <div class="col-lg-4">
                @Html.ActionLink("Create Collection", "create", null, new { @class = "btn btn-primary" })

                <div class="btn-group">
                    <button type="button" class="btn btn-default"><</button>
                    <button type="button" class="btn btn-default">></button>
                </div>

            </div>
        </div>

        <table class="table table-hover" style="margin-top: 30px">
            <thead>
                <tr>
                    <td style="width: 50px">
                        <input type="checkbox" /></td>
                    <td></td>
                    <td><strong>Title</strong></td>
                    <td><strong>Product Count</strong></td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input type="checkbox" /></td>
                    <td>
                        <img src="~/Contents/images/cellular.png" style="width: 30px; height: 30px" /></td>
                    <td>HTC 8x</td>
                    <td>0</td>

                </tr>

            </tbody>
            <tfoot>
                <tr>

                    <td colspan="5" class="text-right">

                        <span>1 of 3 pages</span>
                    </td>
                </tr>
            </tfoot>
        </table>

    </div>
</div>
